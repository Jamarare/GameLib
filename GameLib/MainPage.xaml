<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameLib.MainPage"
             Title="Games">

    <CollectionView ItemsSource="{Binding FilteredGames}" 
                    EmptyView="No games in this category">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10" Spacing="10">
                    <Image Source="{Binding HeroImage}" HeightRequest="150" Aspect="AspectFill"/>
                    <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                    <Label Text="{Binding Subtitle}" FontSize="14" TextColor="Gray"/>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>