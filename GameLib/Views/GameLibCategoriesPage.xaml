<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Models"
             x:Class="Views.GameLibCategoriesPage"
             Title="Categories">

    <ContentPage.BindingContext>
        <local:CategoriesViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <CollectionView ItemsSource="{Binding Category}" ItemsLayout="VerticalGrid, 2" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" CornerRadius="15" HasShadow="True" Margin="5" BackgroundColor="White">
                        <VerticalStackLayout HorizontalOptions="Center">
                            <Image Source="{Binding Icon}" WidthRequest="60" HeightRequest="60"/>
                            <Label Text="{Binding Name}" FontSize="16" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>